<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>
<h1>Canarian Products Catalog</h1>

<ul class="catalog">
  <% @products.each do |product| %>
    <li>
      <%= image_tag(product.image_url) %>
      <h2> <%= product.title %> </h2>
      <p>
        <%= sanitize(product.description) %>
      </p>
      <div class="price">
        <%= number_to_currency(
        product.price,
        unit: 'â‚¬',
        format: '%n%u',
        separator: ',',
        delimiter: '.') %>
      </div>
    </li>
  <% end %>
</ul>
